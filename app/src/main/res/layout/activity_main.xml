<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.desirecodes.starrating.MainActivity">

    <TextView
        android:text="fill-color、empty-color、\n border-color"
        android:textSize="20sp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.desirecodes.rating.RatingStarView
        android:id="@+id/ratingStarView"
        app:rsv_cornerRadius="4dp"
        app:rsv_starMargin="4dp"
        app:rsv_strokeWidth="2dp"
        app:rsv_strokeColor="#457DD7"
        app:rsv_starForegroundColor="#DB6958"
        app:rsv_starBackgroundColor="#E8E8E8"
        app:rsv_rating="1.5"
        app:rsv_starNum="4"
        app:rsv_drawStrokeForEmptyStar="true"
        app:rsv_drawStrokeForHalfStar="false"
        android:paddingTop="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="0dp"
        android:background="#fff"
        android:layout_width="130dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="4dp"
        android:text="star size、corner radius \n border width、star margin"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.desirecodes.rating.RatingStarView
        app:cornerRadius="16dp"
        app:rsv_starMargin="12dp"
        app:rsv_strokeWidth="4dp"
        app:rsv_strokeColor="#457DD7"
        app:rsv_starForegroundColor="#DB6958"
        app:rsv_starBackgroundColor="#E8E8E8"
        app:rsv_rating="0.5"
        app:rsv_starNum="4"
        android:layout_marginTop="8dp"
        app:rsv_drawStrokeForEmptyStar="true"
        app:rsv_drawStrokeForHalfStar="true"
        android:paddingTop="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="70dp" />

    <TextView
        android:layout_marginTop="4dp"
        android:text="star thickness"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.desirecodes.rating.RatingStarView
        app:rsv_cornerRadius="32dp"
        app:rsv_starMargin="12dp"
        app:rsv_strokeWidth="8dp"
        app:rsv_strokeColor="#457DD7"
        app:rsv_starForegroundColor="#DB6958"
        app:rsv_starBackgroundColor="#E8E8E8"
        app:rsv_starNum="2"
        app:rsv_rating="1"
        app:rsv_starThickness="0.7"
        android:layout_marginTop="8dp"
        app:rsv_drawStrokeForEmptyStar="false"
        app:rsv_drawStrokeForHalfStar="true"
        android:paddingTop="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="140dp" />

    <TextView
        android:layout_marginTop="4dp"
        android:text="click to rate"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.desirecodes.rating.RatingStarView
        android:id="@+id/rsv_rating"
        app:rsv_cornerRadius="4dp"
        app:rsv_starMargin="12dp"
        app:rsv_strokeWidth="2dp"
        app:rsv_strokeColor="#457DD7"
        app:rsv_starForegroundColor="#DB6958"
        app:rsv_starBackgroundColor="#E8E8E8"
        app:rsv_starNum="5"
        app:rsv_rating="1"
        app:rsv_enableSelectRating="true"
        app:rsv_starThickness="0.7"
        android:layout_marginTop="8dp"
        app:rsv_drawStrokeForEmptyStar="false"
        app:rsv_drawStrokeForHalfStar="true"
        android:paddingTop="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</LinearLayout>
